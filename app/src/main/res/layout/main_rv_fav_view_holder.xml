<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--this is a view holder which will display user selected articles from the database-->

    <ImageView
        android:id="@+id/main_fav_vh_img"
        android:contentDescription="@string/my_fav_image_desc"
        android:layout_margin="8dp"
        android:layout_width="160dp"
        android:layout_height="120dp" />

    <TextView
        android:id="@+id/tv_fav_article_title"
        android:focusable="true"
        android:contentDescription="@string/my_fav_article_title_desc"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:text="@string/sample_text_short"
        android:textSize="@dimen/text_size_small"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/main_fav_vh_img" />

    <TextView
        android:id="@+id/tv_fav_article_desc"
        android:contentDescription="@string/my_fav_article_title_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:layout_below="@+id/tv_fav_article_title"
        android:text="@string/sample_text_medium"
        android:layout_toEndOf="@+id/main_fav_vh_img" />

    <ImageView
        android:id="@+id/star_fav_count"
        android:contentDescription="@string/my_fav_star_desc"
        android:src="@drawable/ic_star_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_below="@+id/tv_fav_article_desc"
        android:layout_toEndOf="@id/main_fav_vh_img" />

    <TextView
        android:id="@+id/tv_fav_count_number"
        android:contentDescription="@string/my_fav_star_count_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:textSize="@dimen/text_size_small"
        android:text="@string/sample_text_short"
        android:layout_below="@id/tv_fav_article_desc"
        android:layout_toEndOf="@id/star_fav_count" />


</RelativeLayout>